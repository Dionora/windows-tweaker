<Window x:Class="WindowsTweaker.MailBar"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sending Error Report" ShowInTaskbar="False" Height="150" Width="300" WindowStyle="None" ResizeMode="NoResize" Foreground="{StaticResource HeaderTextForegroundBrush}" WindowStartupLocation="CenterScreen" SnapsToDevicePixels="True" Background="{StaticResource WindowBackgroundBrush}">
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel>
            <TextBlock TextWrapping="Wrap">Please Wait, the error-report is being send.</TextBlock>
            <TextBlock TextWrapping="Wrap">This should take less than 2 minutes.</TextBlock>
        </StackPanel>
        <ProgressBar Name="progressBar" Grid.Row="1" Height="20" Margin="3" Orientation="Horizontal" IsIndeterminate="True"></ProgressBar>
    </Grid>
</Window>

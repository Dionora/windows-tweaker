<Window x:Class="WindowsTweaker.Splash"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Windows Tweaker" Height="225" Width="387"
        Background="{StaticResource WindowBackgroundBrush}" 
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Topmost="True"
        ShowInTaskbar="False">
    <Grid>
        <TextBlock x:Name="txtAppVersion" Foreground="White" Text="Windows Tweaker" HorizontalAlignment="Center" VerticalAlignment="Center"
                   Style="{StaticResource H1}" />
        <TextBlock Foreground="White" Text="{StaticResource Loading}" HorizontalAlignment="Right" VerticalAlignment="Bottom"
                   Style="{StaticResource SmallTxtStyle}" Margin="0, 0, 10, 10" />
    </Grid>
</Window>

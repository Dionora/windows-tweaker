                                    <StackPanel Orientation="Horizontal" Margin="30, 10, 5, 5">
                                        <TextBlock Style="{StaticResource TxtStyle}" FontSize="18" VerticalAlignment="Center">
                                            Default action to perform, when Windows crashes
                                        </TextBlock>
                                        <ComboBox SelectedIndex="0" Margin="10, 0, 0, 0" FontSize="16">
                                            <ComboBoxItem>Automatically restart</ComboBoxItem>
                                            <ComboBoxItem>Show error message (Blue Screen of Death)</ComboBoxItem>
                                        </ComboBox>
                                    </StackPanel>
                                    <CheckBox Margin="30, 10, 5, 5" IsChecked="True">
                                        <CheckBox.Content>
                                            <TextBlock TextWrapping="Wrap">Record event in system log</TextBlock>
                                        </CheckBox.Content>
                                    </CheckBox>
                                </StackPanel>
                            </Grid>
                        </TabItem>
                    </TabControl>
                </TabItem>
                <TabItem Header="UTILITIES" Name="tabUtilities" Width="80" Style="{StaticResource MainTabStyle}"
                         Tag="utilities" Loaded="OnTabClicked">
                    <TabControl Margin="10,-10">
                        <TabItem Header="system" Width="80">
                            <Border TextBlock.Foreground="{StaticResource TabItemTextBrushUnselected}" />
                        </TabItem>
                        <TabItem Header="disk" Width="65">
                            <Border TextBlock.Foreground="{StaticResource TabItemTextBrushUnselected}" />
                        </TabItem>
                        <TabItem Header="network" Width="95">
                            <Border TextBlock.Foreground="{StaticResource TabItemTextBrushUnselected}" />
                        </TabItem>
                        <TabItem Header="miscellaneous" Width="140">
                            <Border TextBlock.Foreground="{StaticResource TabItemTextBrushUnselected}" />
                        </TabItem>
                    </TabControl>
                </TabItem>
            </TabControl>
        </Grid>
        <Grid Grid.Row="2">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Style="{StaticResource LargeButton}" Name="btnApply">S_ave</Button>
                <Button Style="{StaticResource LargeButton}" Name="btnOk">_Save &amp; Exit</Button>
                <Button Style="{StaticResource LargeButton}" Name="btnCancel">_Don't Save &amp; Exit</Button>
            </StackPanel>
        </Grid>
    </Grid>

                        </TabItem>
                        <TabItem Header="miscellaneous" Width="130">
                            <Border  TextBlock.Foreground="{StaticResource TabItem_TextBrush_Unselected}">

                            </Border>
                        </TabItem>
                    </TabControl>
                </TabItem>
                <TabItem Header="RESTRICTIONS" Name="tabRestrictions" Width="100" Style="{StaticResource MainTabStyle}">
                    <TabControl Margin="10,-10">
                        <TabItem Header="explorer" Width="90">
                            <Border  TextBlock.Foreground="{StaticResource TabItem_TextBrush_Unselected}">

                            </Border>
                        </TabItem>
                        <TabItem Header="start menu" Width="120">
                            <Border  TextBlock.Foreground="{StaticResource TabItem_TextBrush_Unselected}">

                            </Border>
                        </TabItem>
                        <TabItem Header="system" Width="90">
                            <Border  TextBlock.Foreground="{StaticResource TabItem_TextBrush_Unselected}">

                            </Border>
                        </TabItem>
                        <TabItem Header="taskbar" Width="90">
                            <Border  TextBlock.Foreground="{StaticResource TabItem_TextBrush_Unselected}">

                            </Border>
                        </TabItem>
                    </TabControl>
                </TabItem>
                <TabItem Header="MAINTENANCE" Name="tabMaintenance" Width="120" Style="{StaticResource MainTabStyle}">
                    <TabControl Margin="10,-10">
                        <TabItem Header="memory" Width="90">
                            <Border  TextBlock.Foreground="{StaticResource TabItem_TextBrush_Unselected}">

                            </Border>
                        </TabItem>
                        <TabItem Header="error" Width="70">
                            <Border  TextBlock.Foreground="{StaticResource TabItem_TextBrush_Unselected}">

                            </Border>
                        </TabItem>
                        <TabItem Header="startup settings" Width="140">
                            <Border  TextBlock.Foreground="{StaticResource TabItem_TextBrush_Unselected}">

                            </Border>
                        </TabItem>
                    </TabControl>
                </TabItem>
                <TabItem Header="UTILITIES" Name="tabUtilities" Width="80" Style="{StaticResource MainTabStyle}">
                    <TabControl Margin="10,-10">
                        <TabItem Header="system" Width="80">
                            <Border  TextBlock.Foreground="{StaticResource TabItem_TextBrush_Unselected}">

                            </Border>
                        </TabItem>
                        <TabItem Header="disk" Width="60">
                            <Border  TextBlock.Foreground="{StaticResource TabItem_TextBrush_Unselected}">

                            </Border>
                        </TabItem>
                        <TabItem Header="network" Width="80">
                            <Border  TextBlock.Foreground="{StaticResource TabItem_TextBrush_Unselected}">

                            </Border>
                        </TabItem>
                        <TabItem Header="miscellaneous" Width="130">
                            <Border  TextBlock.Foreground="{StaticResource TabItem_TextBrush_Unselected}">

                            </Border>
                        </TabItem>
                    </TabControl>
                </TabItem>
            </TabControl>
        </Grid>
        <Grid Grid.Row="2">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Style="{StaticResource LargeButtonTemplate}" Name="btnApply">S_ave</Button>
                <Button Style="{StaticResource LargeButtonTemplate}" Name="btnOk">_Save &amp; Exit</Button>
                <Button Style="{StaticResource LargeButtonTemplate}" Name="btnCancel">_Don't Save &amp; Exit</Button>
            </StackPanel>
        </Grid>
    </Grid>
</Window>

<Window x:Class="WindowsTweaker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:extended="clr-namespace:Xceed.Wpf.Toolkit;assembly=WPFToolkit.Extended"
        xmlns:local="clr-namespace:WindowsTweaker"
        x:Name="Window" MinWidth="980" MinHeight="600" MaxWidth="1024" MaxHeight="650"
	Title="Windows Tweaker 4.1 (Portable Version)" Loaded="Window_Loaded"
    WindowStartupLocation="CenterScreen" SnapsToDevicePixels="True" Width="980" Height="600" Icon="Images/mainIconBig.png" Background="{StaticResource WindowBackgroundBrush}">
    <Window.Resources>
        <DataTemplate x:Key="TileView">
            <Grid Margin="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Image Source="{Binding Path=IconAssociated}" Margin="0" Width="16" Height="16"></Image>
                <TextBlock Grid.Column="1" Text="{Binding Path=Name}"></TextBlock>
            </Grid>
        </DataTemplate>
    </Window.Resources>
    <Grid x:Name="LayoutRoot">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0" HorizontalAlignment="Right">
            <TextBlock Margin="10,10,5,0" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Windows" 
                       Foreground="#FF36B5E7" FontSize="18.667"/>
            <TextBlock Margin="0,10,10,0" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Tweaker 4.1" 
                       Foreground="#FF84C514" FontSize="18.667"/>
        </StackPanel>
        <Grid Grid.Row="1">
            <TabControl x:Name="mainTab" Grid.Column="0">
                <TabControl.Resources>
                    <Style TargetType="{x:Type GroupBox}">
                        <Setter Property="Margin" Value="20,3,8,3"></Setter>
                    </Style>
                </TabControl.Resources>
                <TabItem Header="SYSTEM" Name="tabSystem" Loaded="tabSystem_Loaded">
                    <Grid Background="{StaticResource TabPanelBackgroundBrush}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Grid HorizontalAlignment="Center" VerticalAlignment="Top">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"></RowDefinition>
                                <RowDefinition Height="Auto"></RowDefinition>
                                <RowDefinition Height="Auto"></RowDefinition>
                            </Grid.RowDefinitions>
                            <GroupBox Header="Shutdown Configuration" HorizontalAlignment="Left" VerticalAlignment="Center" Background="{StaticResource BlueShadeBackgroundBrush}" Foreground="{StaticResource HeaderTextForegroundBrush}">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"></RowDefinition>
                                        <RowDefinition></RowDefinition>
                                    </Grid.RowDefinitions>
                                    <TextBlock TextWrapping="Wrap" Text="Configure whether Windows should wait for Applications to exit or Shutdown immediately" Margin="9,9,8,5"/>
                                    <StackPanel Grid.Row="1">
                                        <RadioButton x:Name="rbtnDntWait" Content="Kill applications immediately and shutdown straightaway" Click="enableOkANDapplyBtnsBYRadioBtns" GroupName="shutdownTimer"></RadioButton>
                                        <StackPanel Orientation="Horizontal" Margin="0">
                                            <RadioButton x:Name="rbtnWait" Content="Wait for applications to exit for" Click="enableOkANDapplyBtnsBYRadioBtns" GroupName="shutdownTimer" IsChecked="True"></RadioButton>
                                            <extended:IntegerUpDown AllowSpin="True" AllowDrop="False" Increment="20" Maximum="20000" Minimum="20" Value="4000" Name="nudTime" TextAlignment="Left" ValueChanged="enableButtonsByNUD"/>
                                            <TextBlock Margin="5,3">milliseconds</TextBlock>
                                        </StackPanel>
                                    </StackPanel>
                                </Grid>
                            </GroupBox>
                            <GroupBox Grid.Row="1" Header="Windows Installer" VerticalAlignment="Center" HorizontalAlignment="Left" Background="{StaticResource BlueShadeBackgroundBrush}" Foreground="{StaticResource HeaderTextForegroundBrush}">
                                <StackPanel>
                                    <CheckBox x:Name="chkWinInstalr" Content="Disable Windows Installer Service" Click="enableMainButtonsByCheckboxes" />
                                    <CheckBox x:Name="chkAdminPrev" Content="Always Install with Elevated Privileges" Click="enableMainButtonsByCheckboxes" />
                                    <CheckBox x:Name="chkSysPntInstlr" Click="enableMainButtonsByCheckboxes">
                                        <CheckBox.Content>
                                            <TextBlock>Turn off Creation of System Restore Points when Installing <Run Name="helpSysPntInstlr" Cursor="Hand" MouseDown="helpSysPntInstlr_MouseDown">[?]</Run></TextBlock>
                                        </CheckBox.Content>
                                    </CheckBox>
                                </StackPanel>
                            </GroupBox>
                            <GroupBox Grid.Row="2" Padding="3" VerticalAlignment="Center" Header="Registration" HorizontalAlignment="Left" Foreground="{StaticResource HeaderTextForegroundBrush}" Background="{StaticResource BlueShadeBackgroundBrush}">
                                <GroupBox.Resources>
                                    <Style TargetType="{x:Type TextBox}">
                                        <Setter Property="Margin" Value="3"></Setter>
                                    </Style>
                                </GroupBox.Resources>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                                        <ColumnDefinition></ColumnDefinition>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"></RowDefinition>
                                        <RowDefinition Height="Auto"></RowDefinition>
                                        <RowDefinition Height="Auto"></RowDefinition>
                                        <RowDefinition Height="Auto"></RowDefinition>
                                    </Grid.RowDefinitions>
                                    <Image Source="Images/iconProfil.png" Stretch="None" Margin="3"></Image>
                                    <TextBlock Padding="3" TextWrapping="Wrap" Grid.Column="1">Change the name of User &amp; Company to whom this computer is registered</TextBlock>
                                    <TextBlock Grid.Row="1" Padding="2,3,2,2">Owner Name:</TextBlock>
                                    <TextBox Name="txtOwnerName" Grid.Row="1" Grid.Column="1" TextChanged="enableOkAndApplyBtnBYTextBoxes"></TextBox>
                                    <TextBlock Grid.Row="2">Company Name:</TextBlock>
                                    <TextBox Name="txtCompanyName" Grid.Row="2" Grid.Column="1" TextChanged="enableOkAndApplyBtnBYTextBoxes"></TextBox>
                                    <TextBlock Grid.Row="3" Padding="2,3,2,2">Product ID:</TextBlock>
                                    <TextBox Name="txtProductID" Grid.Row="3" Grid.Column="1" TextChanged="enableOkAndApplyBtnBYTextBoxes"></TextBox>
                                </Grid>
                            </GroupBox>
                        </Grid>
                        <GroupBox Grid.Column="1" Header="Edit Information" VerticalAlignment="Top" Background="{StaticResource BlueShadeBackgroundBrush}" Foreground="{StaticResource HeaderTextForegroundBrush}">
                            <GroupBox.Resources>
                                <Style TargetType="{x:Type TextBox}">
                                    <Setter Property="Margin" Value="3"></Setter>
                                </Style>
                            </GroupBox.Resources>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition></RowDefinition>
                                    <RowDefinition></RowDefinition>
                                    <RowDefinition Height="Auto"></RowDefinition>
                                </Grid.RowDefinitions>
                                <GroupBox Header="Information" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="5,5,5,8">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"></RowDefinition>
                                            <RowDefinition></RowDefinition>
                                            <RowDefinition></RowDefinition>
                                            <RowDefinition></RowDefinition>
                                            <RowDefinition></RowDefinition>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"></ColumnDefinition>
                                            <ColumnDefinition></ColumnDefinition>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Padding="2,3,2,2" TextWrapping="Wrap" Grid.ColumnSpan="2">Specify the Support information that is displayed in Computer's Properties</TextBlock>
                                        <TextBlock Padding="2,3,2,2" TextWrapping="Wrap" Grid.Row="1">Manufacturer:</TextBlock>
                                        <TextBox Name="txtManufacturer" Grid.Row="1" Grid.Column="1" TextChanged="enableOkAndApplyBtnBYTextBoxes"></TextBox>
                                        <TextBlock Padding="2,3,2,2" TextWrapping="Wrap" Grid.Row="2">Model:</TextBlock>
                                        <TextBox Name="txtModel" Grid.Row="2" Grid.Column="1" TextChanged="enableOkAndApplyBtnBYTextBoxes"></TextBox>
                                        <TextBlock Padding="2,3,2,2" TextWrapping="Wrap" Grid.Row="3">Support Phone:</TextBlock>
                                        <TextBox Name="txtSupportPh" Grid.Row="3" Grid.Column="1" TextChanged="enableOkAndApplyBtnBYTextBoxes"></TextBox>
                                        <TextBlock Padding="2,3,2,2" TextWrapping="Wrap" Grid.Row="4">Support URL:</TextBlock>
                                        <TextBox Name="txtSupportUrl" Grid.Row="4" Grid.Column="1" TextChanged="enableOkAndApplyBtnBYTextBoxes"></TextBox>
                                    </Grid>
                                </GroupBox>
                                <Grid Grid.Row="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition></ColumnDefinition>
                                        <ColumnDefinition></ColumnDefinition>
                                    </Grid.ColumnDefinitions>
                                    <GroupBox Header="Logo" Margin="5,5,5,8">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"></RowDefinition>
                                                <RowDefinition Height="Auto"></RowDefinition>
                                                <RowDefinition Height="Auto"></RowDefinition>
                                            </Grid.RowDefinitions>
                                            <TextBlock Padding="2,3,2,2" TextWrapping="Wrap">Specify the Image that will be displayed in Computer's Property</TextBlock>
                                            <Button Name="btnSelectLogo" Grid.Row="1" Click="btnSelectLogo_Click">Select Logo</Button>
                                            <Button Name="btnDelLogo" IsEnabled="False" Grid.Row="2" Click="btnDelLogo_Click">Delete Logo</Button>
                                        </Grid>
                                    </GroupBox>
                                    <GroupBox Header="Present Image" Margin="5,5,5,8" Grid.Column="1">
                                        <Image Name="imgProperty" Stretch="Fill" Margin="3"></Image>
                                    </GroupBox>
                                </Grid>
                                <TextBlock HorizontalAlignment="Right" Grid.Row="2"><Hyperlink Name="lnkCompProp" Click="lnkCompProp_Click">Show Computer's Property</Hyperlink></TextBlock>
                            </Grid>
                        </GroupBox>
                    </Grid>
                </TabItem>
                <TabItem Header="EXPLORER" Name="tabExplorer" GotFocus="tabExplorer_GotFocus">
                    <Grid Background="{StaticResource TabPanelBackgroundBrush}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Grid VerticalAlignment="Top">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"></RowDefinition>
                                <RowDefinition Height="Auto"></RowDefinition>
                            </Grid.RowDefinitions>
                            <GroupBox Header="My Computer" Background="{StaticResource BlueShadeBackgroundBrush}" Foreground="{StaticResource HeaderTextForegroundBrush}">
                                <StackPanel>
                                    <GroupBox Header="Drive Letter Display">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"></RowDefinition>
                                                <RowDefinition></RowDefinition>
                                            </Grid.RowDefinitions>
                                            <StackPanel Orientation="Horizontal">
                                                <Image Source="Images/drives.JPG" Stretch="None" Margin="3"></Image>
                                                <TextBlock Padding="2,4,0,0" TextWrapping="Wrap" Text="Specify how the drives are displayed in My Computer."/>
                                            </StackPanel>
                                            <StackPanel Grid.Row="1">
                                                <RadioButton x:Name="rbtnDrvLtrB4Name" Content="Show Drive Letters before name." Click="enableOkANDapplyBtnsBYRadioBtns"></RadioButton>
                                                <RadioButton x:Name="rbtnDrvLtrAftrName" IsChecked="True" Content="Show Drive Letters after the name." Click="enableOkANDapplyBtnsBYRadioBtns"></RadioButton>
                                                <RadioButton x:Name="rbtnNoDrvLtr" Content="Don't show Drive Letters." Click="enableOkANDapplyBtnsBYRadioBtns"></RadioButton>
                                            </StackPanel>
                                        </Grid>
                                    </GroupBox>
                                    <GroupBox x:Name="gbLib" Header="Libraries">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition/>
                                            </Grid.RowDefinitions>
                                            <StackPanel Orientation="Horizontal" Margin="5,5,5,2">
                                                <Image Source="Images/nav_pane.jpg" Margin="3" Stretch="None"></Image>
                                                <TextBlock Padding="2,8,2,0" TextWrapping="Wrap" Text="Specify whether &quot;Libraries&quot; are shown in the left Navigation Pane "/>
                                            </StackPanel>
                                            <StackPanel Grid.Row="1" HorizontalAlignment="Center">
                                                <RadioButton x:Name="rbtnShowLib" IsChecked="True" Content="Show &quot;Libraries&quot; in Navigation Pane" Click="enableOkANDapplyBtnsBYRadioBtns"/>
                                                <RadioButton x:Name="rbtnHideLib" Content="Hide &quot;Libraries&quot; in Navigation Pane" Click="enableOkANDapplyBtnsBYRadioBtns"/>
                                            </StackPanel>
                                        </Grid>
                                    </GroupBox>
                                </StackPanel>
                            </GroupBox>
                            <GroupBox Grid.Row="1" Header="Notification Area" Background="{StaticResource BlueShadeBackgroundBrush}" Foreground="{StaticResource HeaderTextForegroundBrush}">
                                <StackPanel>
                                    <CheckBox x:Name="chkNotificationArea" Content="Show the Notification Area" Click="enableMainButtonsByCheckboxes" Checked="toggleBalloonTipChkBox" Unchecked="toggleBalloonTipChkBox" />
                                    <CheckBox x:Name="chkBalloonTip" Content="Show balloon tips in notification area" Click="enableMainButtonsByCheckboxes" Checked="toggleBalloonTipChkBox" Unchecked="toggleBalloonTipChkBox"/>
                                    <CheckBox x:Name="chkLowDiskSp" Content="Warn When on Low Disk Space [!]" Click="enableMainButtonsByCheckboxes" Checked="toggleBalloonTipChkBox" Unchecked="toggleBalloonTipChkBox">
                                        <CheckBox.ToolTip>
                                            <ToolTip Background="LightYellow" Foreground="Black" HasDropShadow="True" ToolTipService.InitialShowDelay="1"
                                                 ToolTipService.ShowDuration="5000">
                                                <Border BorderBrush="White" BorderThickness="2" CornerRadius="2">
                                                    <Image Source="Images/warningLowSpace.JPG" Stretch="None" Margin="3"></Image>
                                                </Border>
                                            </ToolTip>
                                        </CheckBox.ToolTip>
                                    </CheckBox>
                                </StackPanel>
                            </GroupBox>
                        </Grid>
                        <Grid Grid.Column="1" VerticalAlignment="Top">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"></RowDefinition>
                                <RowDefinition Height="Auto"></RowDefinition>
                                <RowDefinition Height="Auto"></RowDefinition>
                            </Grid.RowDefinitions>
                            <GroupBox Header="Advanced" Foreground="{StaticResource HeaderTextForegroundBrush}" Background="{StaticResource BlueShadeBackgroundBrush}">
                                <StackPanel>
                                    <CheckBox x:Name="chkMenuBar" Content="Always Show Menubar" Click="enableMainButtonsByCheckboxes" />
                                    <CheckBox x:Name="chkHidden" Content="Show Hidden Files and Folders" Click="enableMainButtonsByCheckboxes" />
                                    <CheckBox x:Name="chkFileExt" Content="Hide extensions for known file types" Click="enableMainButtonsByCheckboxes" />
                                    <CheckBox x:Name="chkCheckBoxes" Content="Use checkboxes to select items" Click="enableMainButtonsByCheckboxes" />
                                    <CheckBox x:Name="chkPersistBrowsers" Content="Restore previously opened folders at logon" Click="enableMainButtonsByCheckboxes" />
                                    <CheckBox x:Name="chkShowSysFiles" Content="Show protected operating system files" Click="enableMainButtonsByCheckboxes" />
                                    <CheckBox x:Name="chkCompColor" Content="Display compressed &amp; encrypted NTFS  files in color" Click="enableMainButtonsByCheckboxes" />
                                </StackPanel>
                            </GroupBox>
                            <GroupBox Grid.Row="1" Header="Properties" Foreground="{StaticResource GroupBoxForegroundBrush}" Background="{StaticResource BlueShadeBackgroundBrush}">
                                <StackPanel>
                                    <CheckBox x:Name="chkSecurityTabs" Click="enableMainButtonsByCheckboxes">
                                        <CheckBox.Content>
                                            <TextBlock>Hide &quot;Security&quot; in Folders, Files, Shortcuts, &amp; Drives Properties <Run Name="helpSecurtiyTabs" Cursor="Hand" MouseDown="helpSecurtiyTabs_MouseDown">[?]</Run></TextBlock>
                                        </CheckBox.Content>
                                    </CheckBox>
                                    <CheckBox x:Name="chkCustTab" Click="enableMainButtonsByCheckboxes">
                                        <CheckBox.Content>
                                            <TextBlock>Hide &quot;Customize&quot; in Folders, Files, Shortcuts, &amp; Drives Properties <Run Name="helpCustTab" Cursor="Hand" MouseDown="helpCustTab_MouseDown">[?]</Run></TextBlock>
                                        </CheckBox.Content>
                                    </CheckBox>
                                </StackPanel>
                            </GroupBox>
                            <GroupBox Grid.Row="2" Header="Etcetra" Background="{StaticResource BlueShadeBackgroundBrush}" Foreground="{StaticResource HeaderTextForegroundBrush}">
                                <StackPanel>
                                    <CheckBox Click="enableMainButtonsByCheckboxes" Name="chkRecycleBin">Add Recycle Bin to My Computer</CheckBox>
                                    <CheckBox Click="enableMainButtonsByCheckboxes" Name="chkRegeditToCP">Add Registry Editor to Control Panel</CheckBox>                                    
                                    <Border Margin="3" BorderThickness="2" BorderBrush="{StaticResource HeaderTextForegroundBrush}" CornerRadius="2" Name="gridMetroShortcut">
                                        <Grid Margin="5">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"></RowDefinition>
                                                <RowDefinition Height="Auto"></RowDefinition>
                                            </Grid.RowDefinitions>
                                            <TextBlock TextWrapping="Wrap" HorizontalAlignment="Right">Create shortcut to Shutdown on Metro Start-Screen in Windows 8</TextBlock>
                                            <Grid Grid.Row="1">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                                                    <ColumnDefinition></ColumnDefinition>
                                                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock TextWrapping="Wrap" Padding="2,3,2,2">with the name</TextBlock>
                                                <TextBox Name="txtShutdownShortcut" Grid.Column="1" Margin="2">Shutdown</TextBox>
                                                <Button Grid.Column="2" Name="btnCreateShortcut" Click="btnCreateShortcut_Click">Create</Button>
                                            </Grid>
                                        </Grid>
                                    </Border>
                                </StackPanel>
                            </GroupBox>
                        </Grid>
                    </Grid>
                </TabItem>
                <TabItem Header="DISPLAY" Name="tabDisplay" GotFocus="tabDisplay_GotFocus">
                    <Grid Background="{StaticResource TabPanelBackgroundBrush}">
                        <Grid VerticalAlignment="Top">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"></RowDefinition>
                                <RowDefinition Height="Auto"></RowDefinition>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                                <ColumnDefinition Width="0.75*"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <GroupBox Header="Display Settings" Background="{StaticResource BlueShadeBackgroundBrush}" Foreground="{StaticResource HeaderTextForegroundBrush}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                                        <ColumnDefinition></ColumnDefinition>
                                    </Grid.ColumnDefinitions>
                                    <Image VerticalAlignment="Center" HorizontalAlignment="Center" Width="48" Height="48" Margin="15,3" Stretch="Uniform" Source="Images/cm_weroff.jpg"></Image>
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <CheckBox x:Name="chkWindowAnimation" Content="Enable Windows Animation" Click="enableMainButtonsByCheckboxes" />
                                        <CheckBox x:Name="chkWinDragContnt" Content="Show windows' content while dragging" Click="enableMainButtonsByCheckboxes" />
                                        <CheckBox x:Name="chkWinVersion" Content="Show Windows' version on the Desktop (In White Text)" Click="enableMainButtonsByCheckboxes" />
                                    </StackPanel>
                                </Grid>
                            </GroupBox>
                            <GroupBox Grid.Row="1" Header="Window Switcher Customization" Background="{StaticResource BlueShadeBackgroundBrush}" Foreground="{StaticResource HeaderTextForegroundBrush}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition></ColumnDefinition>
                                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock TextWrapping="Wrap">Number of icons shown in a single row of ALT + Tab switcher (By Default 7)</TextBlock>
                                            <extended:IntegerUpDown AllowSpin="True" AllowDrop="False" Increment="1" Maximum="15" Minimum="1" Value="1" Name="nudAltTabIcons" TextAlignment="Left" ValueChanged="enableButtonsByNUD"></extended:IntegerUpDown>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock TextWrapping="Wrap">Number of rows shown in ALT + Tab switcher (By Default 3)</TextBlock>
                                            <extended:IntegerUpDown AllowSpin="True" AllowDrop="False" Increment="1" Maximum="10" Minimum="2" Value="2" Name="nudAltTabRows" TextAlignment="Left" ValueChanged="enableButtonsByNUD"></extended:IntegerUpDown>
                                        </StackPanel>
                                    </StackPanel>
                                    <Image Grid.Column="1" VerticalAlignment="Bottom" Source="Images/monitor_2.ico" Stretch="Uniform" Width="32" Height="32" Margin="0,3,0,0" HorizontalAlignment="Right"></Image>
                                </Grid>
                            </GroupBox>
                            <GroupBox Grid.Column="1" Header="Selection Color" Background="{StaticResource BlueShadeBackgroundBrush}" Foreground="{StaticResource HeaderTextForegroundBrush}" Padding="15,5,0,2">
                                <StackPanel>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"></ColumnDefinition>
                                            <ColumnDefinition></ColumnDefinition>
                                        </Grid.ColumnDefinitions>
                                        <Image Source="Images/selection.jpg" Stretch="None" Width="32" Height="32"></Image>
                                        <TextBlock Grid.Column="1" Margin="10,2,2,2" TextWrapping="Wrap" Text="Specify the color that will be used for the selection rectangle when selecting files or folders in Explorer"></TextBlock>
                                    </Grid>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Padding="5,8">Current Color:</TextBlock>
                                        <Rectangle Cursor="Hand" MouseDown="rectSelectionColor_MouseDown" Name="rectSelectionColor" Width="16" Height="16" Stroke="Black" StrokeThickness="1"></Rectangle>
                                        <Button Name="btnShowColor" Margin="20,5" Click="btnShowColor_Click">Select Color</Button>
                                    </StackPanel>
                                    <Button Name="btnDefSelColor" HorizontalAlignment="Right" Click="btnDefSelColor_Click">Use Default Color</Button>
                                </StackPanel>
                            </GroupBox>
                        </Grid>
                    </Grid>
                </TabItem>
                <TabItem Header="RIGHT-CLICK" Width="90" Name="tabRightClick" GotFocus="tabRightClick_GotFocus">
                    <Grid Background="{StaticResource TabPanelBackgroundBrush}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition></ColumnDefinition>
                                <ColumnDefinition></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Grid VerticalAlignment="Top">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"></RowDefinition>
                                    <RowDefinition Height="Auto"></RowDefinition>
                                </Grid.RowDefinitions>
                                <GroupBox Header="General" VerticalAlignment="Center" Background="{StaticResource BlueShadeBackgroundBrush}" Foreground="{StaticResource HeaderTextForegroundBrush}">
                                    <StackPanel>
                                        <CheckBox Name="chkCopyTo" Click="enableMainButtonsByCheckboxes">Add "Copy to Folder" to Right-Click menu of every File and Folder</CheckBox>
                                        <CheckBox Name="chkMoveTo" Click="enableMainButtonsByCheckboxes">Add "Move to Folder" to Right-Click menu of every File and Folder</CheckBox>
                                        <CheckBox Name="chkSendTo" Click="enableMainButtonsByCheckboxes">Add "Send To" to Right-Click menu of every File and Folder</CheckBox>
                                        <CheckBox Name="chkClip" Click="enableMainButtonsByCheckboxes">
                                            <TextBlock>Add "Copy All Contents" for Right-Click menu of Text Files(.txt) <Run MouseDown="helpClip_MouseDown" Cursor="Hand"  Name="helpClip">[?]</Run></TextBlock>
                                        </CheckBox>
                                        <CheckBox Name="chkEncrNDec" Click="enableMainButtonsByCheckboxes">Add "Encrypt" and "Decrypt" to the Right-Click menu of every File &amp; Folder</CheckBox>
                                        <CheckBox Click="enableMainButtonsByCheckboxes" Name="chkOpenNotepad">Add  Open with Notepad  to the Right-Click Menu for All Files</CheckBox>
                                        <CheckBox Click="enableMainButtonsByCheckboxes" Name="chkCPcommand">Add Control Panel to the Desktop Right-Click Menu</CheckBox>
                                        <CheckBox Click="enableMainButtonsByCheckboxes" Name="chkCmdPromp">Make "Open Command Prompt here" Always Display for Folders &amp; Drives</CheckBox>
                                        <CheckBox Click="enableMainButtonsByCheckboxes" Name="chkDfrg">Add Defragment to the Right-Click Menu for a Drive</CheckBox>
                                    </StackPanel>
                                </GroupBox>
                                <GroupBox Name="gbContextProg" Header="Add Custom Programs" Grid.Row="1" Background="{StaticResource BlueShadeBackgroundBrush}" Foreground="{StaticResource HeaderTextForegroundBrush}">
                                    <StackPanel>
                                        <TextBlock TextWrapping="Wrap" HorizontalAlignment="Center">Add your favourite applications and websites to Right-Click menu.</TextBlock>
                                        <Button HorizontalAlignment="Stretch" Name="btnAddRightItem" Click="btnAddRightItem_Click">Add New Item...</Button>
                                        <Button HorizontalAlignment="Stretch" Name="btnRmvCust" Click="btnRmvCust_Click">Remove Custom Items...</Button>
                                    </StackPanel>
                                </GroupBox>
                            </Grid>
                            <Grid Grid.Column="1" VerticalAlignment="Top">
                                <GroupBox Header="Send To Menu" Background="{StaticResource BlueShadeBackgroundBrush}" Foreground="{StaticResource HeaderTextForegroundBrush}">
                                    <StackPanel>
                                        <TextBlock TextWrapping="Wrap">Use this list to customize the items in Send To menu</TextBlock>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="2*"></ColumnDefinition>
                                                <ColumnDefinition Width="*"></ColumnDefinition>
                                            </Grid.ColumnDefinitions>
                                            <ListBox Margin="5" Name="lstSendTo" ItemTemplate="{StaticResource TileView}" MaxHeight="325" SelectionMode="Extended"></ListBox>
                                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                <Button Name="btnInsrtFoldrSendTo" Click="btnInsrtFoldrSendTo_Click">Add Folder</Button>
                                                <Button Name="btnInsrtFileSendTo" Click="btnInsrtFileSendTo_Click">Add File</Button>
                                                <Button Name="btnDelSendTo" Click="btnDelSendTo_Click">Delete Item(s)</Button>
                                                <TextBlock HorizontalAlignment="Right" Margin="5,30,5,5"><Hyperlink Name="lnkSenToEx" Click="lnkSenToEx_Click">Edit in Explorer</Hyperlink></TextBlock>
                                            </StackPanel>
                                        </Grid>
                                    </StackPanel>
                                </GroupBox>
                            </Grid>
                        </Grid>
                    </Grid>
                </TabItem>
                <TabItem Header="PLACES" Name="tabPlaces" GotFocus="tabPlaces_GotFocus">
                    <Grid Background="{StaticResource TabPanelBackgroundBrush}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition></ColumnDefinition>
                                <ColumnDefinition></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Grid VerticalAlignment="Top">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"></RowDefinition>
                                    <RowDefinition Height="Auto"></RowDefinition>
